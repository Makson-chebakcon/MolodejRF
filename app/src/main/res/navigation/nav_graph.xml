<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/startFirstScreenFragment">

    <fragment
        android:id="@+id/startFirstScreenFragment"
        android:name="com.example.molodejrf.presentation.fragment.start.StartFirstScreenFragment"
        android:label="fragment_start_first_screen"
        tools:layout="@layout/fragment_start_first_screen" >
        <action
            android:id="@+id/action_startFirstScreenFragment_to_startEmailAuthFragment"
            app:destination="@id/startEmailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_startFirstScreenFragment_to_startRegistrationFragment4"
            app:destination="@id/startRegistrationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/startEmailAuthFragment"
        android:name="com.example.molodejrf.presentation.fragment.start.StartEmailAuthFragment"
        android:label="fragment_start_email_auth"
        tools:layout="@layout/fragment_start_email_auth" >
        <action
            android:id="@+id/action_startEmailAuthFragment_to_startFragmentAuth3"
            app:destination="@id/startFragmentAuth" />
        <action
            android:id="@+id/action_startEmailAuthFragment_to_startFragmentAuth"
            app:destination="@id/startFragmentAuth"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/startFragmentAuth"
        android:name="com.example.molodejrf.presentation.fragment.start.StartFragmentAuth"
        android:label="StartFragmentAuth"
        tools:layout="@layout/fragment_start_auth">
        <action
            android:id="@+id/action_startFragmentAuth3_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/startRegistrationFragment"
        android:name="com.example.molodejrf.presentation.fragment.start.StartRegistrationFragment"
        android:label="StartRegistrationFragment"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_startRegistrationFragment4_to_startEmailAuthFragment"
            app:destination="@id/startEmailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.molodejrf.presentation.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
</navigation>